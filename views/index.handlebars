<div class="hero">
  <h1>Burgers Logger!</h1>


  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h2>Burgers!</h2>

        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burgers-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-md-4">

      </div>
      <div class="col-md-4">
        <h2>Burger that are devoured!</h2>

        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burgers2-block}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>




  <div class="formList">
    <h2>Add a Burger</h2>
    <form id="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        
        <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0" id="addtolist"> Add to Burger list!
      </div>

      <button class="btn btn-primary btn-sm" type="submit">Add Burger</button>
    </form>
  </div>
</div>